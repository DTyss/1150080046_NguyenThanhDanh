@model Danh.Models.HoaDon

@{
    ViewBag.Title = "Create";
}


<head>
    <style>
        /* CSS cho form */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 150vh;
        }

        .form-horizontal {
            font-size: 1em;
            padding: 2vw;
            max-width: 80%;
            border-radius: 1vw;
            box-shadow: 0 0 1vw rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90%; /* Sử dụng % cho khung form */
            max-width: 600px; /* Giới hạn chiều rộng tối đa */
        }

        .form-group {
            margin-bottom: 1.5vh;
            width: 100%;
        }

        .checkbox-label {
            margin-left: 0.5vw; /* Khoảng cách giữa nút và nhãn */
        }

        .control-label {
            font-weight: bold;
            color: #555;
            font-size: 0.8em; /* Kích thước font tương đối */
            width: 100%;
            text-align: center;
        }

        .form-control {
            padding: 1vw;
            border-radius: 0.5vw;
            border: 0.2vw solid #ccc;
            font-size: 0.8em; /* Kích thước font tương đối */
            width: 100%; /* Sử dụng % cho ô nhập liệu */
            max-width: 100%; /* Đảm bảo không vượt quá chiều rộng của khung form */
        }

        .btn-default {
            padding: 0.8vw 1.5vw;
            border-radius: 0.5vw;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 0.8em; /* Kích thước font tương đối */
            width: 90%; /* Sử dụng % cho nút */
            max-width: 100%; /* Đảm bảo không vượt quá chiều rộng của khung form */
        }

        .action {
            font-size: 0.7em; /* Kích thước font tương đối */
            border: 0.2vw solid rgba(0, 0, 0, 0);
            padding: 1vw;
            border-radius: 0.5vw;
            background-color: rgba(255, 255, 255, 0.5);
            width: 90%; /* Sử dụng % cho action */
            max-width: 100%; /* Đảm bảo không vượt quá chiều rộng của khung form */
        }

        h2 {
            font-size: 1.5em;
            color: #333;
            margin-top: 0;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="form-horizontal">
            <h2>Tạo hóa đơn mới</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.SoHoaDon, "Số Hóa Đơn ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SoHoaDon, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoHoaDon, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDienKe, "Mã Điện Kế", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownList("MaDienKe", ViewBag.MaDienKeList as SelectList, "Chọn", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaDienKe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Thang, "Tháng", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Thang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Thang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ThanhTien, "Thành Tiền", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <!-- Thêm class text-center để căn giữa -->
                        <div class="col-md-12">
                            <!-- Sử dụng toàn bộ chiều rộng -->
                            <input type="submit" value="Tạo" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="action">
                    @Html.ActionLink("Trở lại trang Hóa Đơn", "Index")
                </div>
            }
        </div>
    </div>
</body>

